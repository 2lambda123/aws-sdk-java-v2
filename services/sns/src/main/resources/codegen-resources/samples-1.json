{
  "samples": {
    "PublishSnsMessages": {
      "documentation": "This example demonstrates how to publish SMS messages to an Amazon SNS topic",
      "instructions": [
        {
          "name": "CreateTopic",
          "type": "ServiceOperation",
          "documentation": "Create a topic and return its ARN.",
          "input": [
            {
              "name": "Name",
              "type": "string",
              "value": "foo"
            }
          ],
          "outputConsumer": {
            "outputVariable": "createTopicResponse",
            "instructions": [
              {
                "name": "print",
                "type": "SdkOperation",
                "input": [
                  {
                    "type": "string",
                    "value": "Response: "
                  },
                  {
                    "type": "reference",
                    "value": "createTopicResponse"
                  }
                ]
              }
            ]
          }
        },
        {
          "name": "Subscribe",
          "type": "ServiceOperation",
          "documentation": "Subscribe an endpoint to a topic",
          "input": [
            {
              "name": "TopicArn",
              "type": "reference",
              "value": "createTopicResponse.topicArn"
            },
            {
              "name": "Protocol",
              "type": "string",
              "value": "sms"
            },
            {
              "name": "Endpoint",
              "type": "string",
              "value": "12345678"
            }
          ]
        },
        {
          "name": "Publish",
          "type": "ServiceOperation",
          "documentation": "Publish a message to a topic. The message is sent to every subscriber.",
          "input": [
            {
              "name": "TopicArn",
              "type": "reference",
              "value": "createTopicResponse.topicArn"
            },
            {
              "name": "Message",
              "type": "string",
              "value": "hello world"
            }
          ]
        }
      ]
    }
  }
}
